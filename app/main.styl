@import "./variables.styl"

body
  background-color #fff
  font-family 'Bariol Regular', sans-serif
  color #231f20
  margin 0

a, avisited
  color inherit
  text-decoration none

h1
  font-size 50px
  line-height 60px

h2
  font-size 31px

h3
  font-size 30px
  line-height 1.1

h4
  font-size 22px

h5
  font-size 18px

h1, h2, h3, h4, h5, h6
  font-family 'Bariol Regular', Helvetica, Arial, sans-serif
  color color-dark

.clearfix:after
  content ""
  display table
  clear both

img
  max-width 100%

input
  font-family 'Bariol Light', sans-serif

ul
  list-style none
  margin 0
  padding 0

.entry-content
  margin-bottom 25px

.entry-content p
  font-size 15px
  font-family 'Bariol Regular', sans-serif
  line-height 19px

.entry-content p a
  color #b04514

.entry-content p ahover
  text-decoration underline

.content
  overflow hidden
  float left
  width calc(100% - 320px)
  margin-left 12px
  margin-right 25px
  min-height 700px

#container
  position relative
  margin 5px auto 5px auto
  width 100%
  max-width 990px
  padding-top 18px
  padding-bottom 21px
  clear both

#primary
  background #ecf4f4
  width 280px
  padding 10px 15px
  box-sizing border-box
  float right
  color #6c6d6f
  position relative
  top 20px

.text-center
  text-align center

.date-info
  font-size 14px
  color color-grey
  text-transform uppercase
  margin-top 10px

.post-title
  color color-dark
  font-size 24px
  line-height 30px

.post-p
  font-size 16px
  color color-grey

.post-head
  position relative
  color color-dark
  font-size 38px
  line-height 1.2
  z-index 1
  overflow hidden
  margin 60px 0 40px
  &:after
    content ''
    display inline-block
    width 100%
    height 1px
    background #eff2f6
    z-index -1
    position relative
    vertical-align middle
    left 20px
    margin 0 -100% 0 0

/* btn */
.btn-yellow
  color color-dark
  font-size 18px
  line-height 40px
  font-family 'Bariol Bold', sans-serif
  background-color #ffc300
  border 1px solid #f1b902
  border-radius 2px
  padding 0 10px
  text-align center
  min-width 160px

/* form input (text or search) */
.text
  background-color #fff
  border-radius 2px
  border 1px solid #edf0f5
  font-size 18px
  line-height 20px
  padding 10px 15px

/* indent */
.margin-top-50
  margin-top 50px
