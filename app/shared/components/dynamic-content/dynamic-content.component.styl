@import "../../../variables.styl"

.dynamic-item
  margin-bottom 70px

.dynamic-wrap-img
  border-radius 3px
  overflow hidden
  border 1px solid #dce3ec
  position relative
  display block
  img
    height 240px
    width 100%
  .play
    width 50px
    height 50px
    opacity 0.7
    border-radius 50%
    border 1px solid color-dark
    position absolute
    top 40%
    left 43%
    z-index 2
    background #f2fafc
    .fa-play
      color color-dark
      font-size 24px
      top 12px
      left 17px
      position absolute

.post-title
  margin 5px 0
  display block
