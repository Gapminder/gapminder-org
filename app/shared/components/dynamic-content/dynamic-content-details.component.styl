@import "../../../variables.styl"

.dynamic-details
  font-family 'Bariol Regular', sans-serif

  h1
    font-size 38px
    margin-bottom 0

  ul
    li
      font-size: 20px;
      line-height: 30px;
      color color-grey
      margin-bottom 10px
      &:before
        content "- "
  .small-description
    margin 0
    font-size 22px
    font-family 'Bariol Light Italic', Bariol Light, sans-serif

  .date-info
    font-family 'Bariol Light', sans-serif;
    font-size 14px;
    color #767d86

.dynamic-item
  margin-bottom 70px
  float none
  display inline-block
  vertical-align top

.dynamic-wrap-img
  border-radius 3px
  overflow hidden
  border 1px solid #dce3ec
  position relative
  display block
  padding-top 66.66%
  background-position: 50% 50%;
  background-size: cover;
  .play
    width 50px
    height 50px
    opacity 0.7
    border-radius 50%
    border 1px solid color-dark
    position absolute
    top 40%
    left 43%
    z-index 2
    background #f2fafc
    .fa-play
      color color-dark
      font-size 24px
      top 12px
      left 17px
      position absolute
  &:hover
    .post-title
      color color-yellow
    .play
      opacity 1
.post-title
  font-size 24px
  line-height 30px
  color #374551

.post-p
  font-size 16px
  color #767d86

.padding-0
  padding 0

.thumbnail-title
  max-width 50px
  max-height 50px
  float left
  margin-right 15px
  margin-top 10px

