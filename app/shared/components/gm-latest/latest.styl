@import "../../../variables.styl"

.blog-item
  &:hover
    .post-title
      color color-yellow
      text-decoration none

.post-wrap-img
    border-radius 3px
    overflow hidden
    border 1px solid #dce3ec
    display block
    height 240px
    width 100%
    background-position 50% 50%
    background-size cover


  @media medium
    display inline-block
    float none
    vertical-align top
    margin-bottom 15px
  @media small
    margin-bottom 15px
