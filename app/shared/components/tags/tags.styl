@import "../../../variables.styl"

.wrap-tags
  border-top 1px solid #eff2f6

  .list-tags
    margin 10px 0
    float left

    li
      border 1px solid #eff2f6
      border-radius 3px
      padding 3px
      color color-grey
      font-size 14px
      float left
      margin-right 5px

.dynamic-wrap-img
  border-radius 3px
  overflow hidden
  border 1px solid #dce3ec
  position relative
  display block
  img
    height 240px
    width 100%
  .play
    width 50px
    height 50px
    opacity 0.7
    border-radius 50%
    border 1px solid color-dark
    position absolute
    top 40%
    left 43%
    z-index 2
    background #f2fafc
    .fa-play
      color color-dark
      font-size 24px
      top 12px
      left 17px
      position absolute
  &:hover
    .post-title
      color color-yellow
    .play
      opacity 1
